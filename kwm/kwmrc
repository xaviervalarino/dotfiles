/* kwmc display -c horizontal */

// Let Kwm listen for hotkeys
kwmc config hotkeys on

// WINDOW DEFAULTS
//======================================================================

kwmc config tiling bsp // tile windows w/ binary space partitioning
kwmc config spawn right // New splits become right leaf-node

kwmc config split-ratio 0.5
kwmc config optimal-ratio 1.382
kwmc config padding 35 15 55 15 // {padding}: top bottom left right
kwmc config gap 8 8 // {gap}: vertical horizontal

kwmc config lock-to-container off // dont auto size window to container
kwmc config float-non-resizable on // float windows that dont rezise
kwmc config cycle-focus on // Allow window focus to wrap-around


// MOUSE
// =====================================================================

kwmc config focus-follows-mouse off // dont autoraise windows
kwmc config mouse-follows-focus off // center mouse on focused window

/* Focus-follows-mouse is temporarily disabled when
   a floating window has focus */
kwmc config standby-on-float on


/* Override default settings for space 1 on screen 0
// New splits become the right leaf-node
kwmc config spawn right
   kwmc config space 0 1 mode monocle
   kwmc config space 0 1 padding 100 100 100 100
   kwmc config space 0 1 gap 40 40 */

/* Override default settings for screen 1
   kwmc config display 1 mode bsp
   kwmc config display 1 padding 100 100 100 100
   kwmc config display 1 gap 40 40 */


// BORDERS
// =====================================================================

// Enable border for focused window
kwmc config border focused on
kwmc config border focused size 2
kwmc config border focused color 0xFF7DCBC4
kwmc config border focused radius 6

// Enable border for marked window
kwmc config border marked on
kwmc config border marked size 2
kwmc config border marked color 0xFFCC5577
kwmc config border marked radius 6

// Enable the prefix mode
kwmc mode prefix prefix on
kwmc mode prefix timeout 0.75
kwmc mode prefix restore default
kwmc mode prefix color 0xFF458588

// Activate resize mode
kwmc mode resize prefix on
kwmc mode resize timeout 0.75
kwmc mode resize restore default
kwmc mode resize color 0xFF458588

// INCLUDES
// =====================================================================

include bindings
include rules

// vim:syntax=rc
