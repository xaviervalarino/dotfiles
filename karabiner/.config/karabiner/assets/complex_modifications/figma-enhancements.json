{
  "title": "Figma Enhancements",
  "rules": [
    {
      "description": "Figma: ⌃ + D → delete_forward",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.figma.Desktop"]
            }
          ],
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": ["left_control"]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
