{
  "title": "Slack Enhancements",
  "rules": [
    {
      "description": "Slack: ⌘  + K →  Create hyperlink",
      "manipulators": [
        {
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": ["com.tinyspeck.slackmacgap"]
            }
          ],
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["command"]
            }
          },
          "to": [
            {
              "key_code": "u",
              "modifiers": ["command", "shift"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
