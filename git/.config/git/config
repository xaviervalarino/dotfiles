[alias]
  br = branch
  com = commit
  co = checkout
  st = status --branch
  up = rebase
  ri = rebase --interactive
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  patch = add --patch
  ammend = commit --amend
  cached = diff --cached
  unstage = reset HEAD --
  last = log -1 HEAD
[core]
  editor = nvim
  excludesfile = /Users/xavier/.config/git/excludes
  pager = delta --features="$TERM_COLORSCHEME"
[push]
  default = simple
[pull]
  rebase = true
[interactive]
  diffFilter = delta --features="$TERM_COLORSCHEME" --color-only
[delta]
  navigate = true  # use n and N to move between diff sections
  line-numbers = true
; dark by default: Catppuccin-Frappe, Catpuccin-Macchiato, Catppuccin-Mocha 
[delta "Catppuccin-Latte"]
  light = true
[merge]
  conflictstyle = diff3
[diff]
  colorMoved = default
[init]
  defaultBranch = main
  templatedir = ~/.config/git/template/
